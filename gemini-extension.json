{
    "name": "uv-mcp",
    "version": "0.1.0",
    "description": "MCP server for uv - environment diagnostics, repair, and dependency management",
    "mcpServers": {
        "uv-mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "${extensionPath}",
                "run",
                "uv-mcp"
            ],
            "cwd": "${extensionPath}"
        }
    }
}