{
    "name": "uv-mcp",
    "version": "0.6.1",
    "description": "Bridge modern, reproducible Python environments with MCP agents. Diagnose, self-heal, and manage uv workflows",
    "icon": "ext/uv_mcp_logo.png",
    "keywords": [
        "python",
        "uv",
        "pip",
        "devops",
        "agent",
        "automation"
    ],
    "author": "Saadman Rafat",
    "repository": {
        "type": "git",
        "url": "https://github.com/saadmanrafat/uv-mcp"
    },
    "mcpServers": {
        "uv-mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "${extensionPath}",
                "run",
                "uv-mcp"
            ],
            "cwd": "${extensionPath}",
            "env": {
                "PATH": "${PATH}:${HOME}/.local/bin:${HOME}/.cargo/bin"
            }
        }
    }
}