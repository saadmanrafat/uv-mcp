{
    "mcpServers": {
        "uv-mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "/absolute/path/to/uv-mcp",
                "run",
                "uv-mcp"
            ],
            "env": {
                "PATH": "${PATH}:${HOME}/.local/bin:${HOME}/.cargo/bin"
            }
        }
    }
}